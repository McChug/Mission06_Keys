@{
    ViewData["Title"] = "Add to Collection";
}
@model MovieEntry

<h1 class="display-4 mt-3">@ViewData["Title"]</h1>

<p>Use the form below to add films to Joel&apos;s collection:</p>

<form method="post" class="d-flex flex-column gap-3" style="max-width:400px;">
    <div class="d-flex flex-column">
        <label asp-for="Category">Category</label>
        <input asp-for="Category" required />
    </div>
    <div class="d-flex flex-column">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" required />
    </div>
    <div class="d-flex flex-column">
        <label asp-for="Year">Year</label>
        <input asp-for="Year" required />
    </div>
    <div class="d-flex flex-column">
        <label asp-for="Director">Director</label>
        <input asp-for="Director" required />
    </div>
    <div class="d-flex flex-column">
        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating" required>
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R (don&apos;t watch)</option>
        </select>
    </div>
    <div class="d-flex flex-column">
        <label asp-for="Edited">Edited</label>
        <select asp-for="Edited">
            <option value=""></option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="d-flex flex-column">
        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo" />
    </div>
    <div class="d-flex flex-column">
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" maxlength="25" />
    </div>

    <button class="btn btn-primary" type="submit">Enter Movie</button>
</form>
