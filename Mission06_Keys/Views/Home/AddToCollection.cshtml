@{
    ViewData["Title"] = "Add to Collection";
}
@model Movie

<h1 class="display-4 mt-3">@ViewData["Title"]</h1>

<p>Use the form below to add films to Joel&apos;s collection:</p>

<form method="post" class="d-flex flex-column gap-3" style="max-width:400px;">
    <div class="d-flex flex-column">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId">
            <option value=""></option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
    </div>
    <div class="d-flex flex-column">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" required />
    </div>
    <div class="d-flex flex-column">
        <label asp-for="Year">Year</label>
        <input asp-for="Year" type="number" min="1888" max="3000" required />
    </div>
    <div class="d-flex flex-column">
        <label asp-for="Director">Director</label>
        <input asp-for="Director" />
    </div>
    <div class="d-flex flex-column">
        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating">
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R (don&apos;t watch)</option>
        </select>
    </div>
    <div class="d-flex flex-column">
        <label asp-for="Edited">Edited</label>
        <select asp-for="Edited" required>
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
    </div>
    <div class="d-flex flex-column">
        <label asp-for="CopiedToPlex" required>Copied to Plex?</label>
        <select asp-for="CopiedToPlex">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
    </div>
    <div class="d-flex flex-column">
        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo" />
    </div>
    <div class="d-flex flex-column">
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" maxlength="25" />
    </div>

    <input type="hidden" asp-for="MovieId" />
    <button class="btn btn-primary" type="submit">Enter Movie</button>

    <div asp-validation-summary="All"></div>
</form>
